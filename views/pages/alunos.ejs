<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="row mt-5  text-center">
                <div class="col-12">
                    <h1>Lista de Alunos</h1>
                </div>

            </div>
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nome Aluno</th>
                            <th>Data Nascimento</th>
                            <th>Turma</th>
                            <th>Endereço</th>
                            <th>Nome Mãe</th>
                            <th>Contato</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% lista_alunos.forEach(function(aluno){ %>
                            <tr>
                                <td>
                                    <%= aluno.nome_Aluno %>
                                </td>
                                <td>
                                    <%= aluno.dataNasc %>
                                </td>
                                <td>
                                    <%= aluno.turma %>
                                </td>
                                <td>
                                    <%= aluno.endereco %>
                                </td>
                                <td>
                                    <%= aluno.nome_Mae %>
                                </td>
                                <td>
                                    <%= aluno.contato %>
                                </td>
                                <td>
                                    <a href="/alunos/editarAlunos/<%= aluno._id%>" class="btn btn-warning">Editar</a>
                                    <a href="/alunos/deletarAluno/<%= aluno._id%>" class="deletar btn btn-danger">Excluir</a>
                                </td>
                            </tr>
                            <% }) %>
                            <% if(lista_alunos=="" ){%>
                                <div class="alert alert-danger">Lista Vazia</div>
                                <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-12 justify-content-center">
                <a href="/alunos/cadastrarAlunos" class="btn btn-dark">Cadastrar Alunos</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>