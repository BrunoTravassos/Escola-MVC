<%- include('../partials/header'); %>

    <div class="container">
    
        <div class="row">
            <div class="col">
                <h1 class="htext mt-5">Cadastrar Alunos</h1>
                <form action="/alunos/cadastrarAlunos" method="post">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input class="form-control" onblur="validaNome(value)" type="text" id="nome" name="nome_Aluno"
                            placeholder="Nome Aluno" required>
                    </div>
                    <div class="form-group">
                        <label for="dataNasc">Data Nascimento</label>
                        <input class="form-control" type="date" id="dataNasc" name="dataNasc" placeholder="data Nascimento"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="serie">Série Matriculada</label>
                        <select class="form-control" name="turma" id="turma" required>Turmas
                            <option value="" selected>Escolha</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="endereco">Endereço</label>
                        <input class="form-control" type="text" id="endereco" name="endereco" placeholder="Endereço"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="nome_Mae">Nome da Mãe</label>
                        <input class="form-control" type="text" id="nome_Mae" name="nome_Mae" placeholder="Nome da Mae"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="contato">Contato</label>
                        <input class="form-control" type="text" id="contato" name="contato" placeholder="Contato" required>
                    </div>
                    <button class="btn btn-dark" type="submit">Cadastrar</button>
                    <a href="/alunos" class="btn btn-primary">Cancelar</a>
                </form>
            </div>
    
        </div>
    </div>


<%- include('../partials/footer'); %>